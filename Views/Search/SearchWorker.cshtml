@model SearchWorkerVM
<div class="row">
@if (Model.len == 0)
{
  <h1>Nothing has been found. Sorry:(</h1>
}
@for (int i = 0; i < Model.len; i++)
{
    <div class="col-sm-6 mb-3 mb-sm-0">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">@Model.name[i]</h5>
            <p class="card-text">Sex: @Model.gender[i]</p>
            <a asp-controller="Profile" asp-action="Worker" asp-route-id=@Model.id[i] class="btn btn-primary">View profile</a>
          </div>
        </div>
    </div>
}
</div>