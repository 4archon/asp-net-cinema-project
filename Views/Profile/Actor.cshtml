@model ProfileActorVM
<h2>@Model.name</h2>
<h6>Sex: @Model.gender</h6>
<div class="container">
  <div class="row align-items-start">
    <div class="col-4 text-center">
      <figure class="figure">
        <img src="..." class="figure-img img-fluid rounded" alt="...">
        <figcaption class="figure-caption">A caption for the above image.</figcaption>
      </figure>
    </div>
    <div class="col">
      <table class="table table-bordered table-striped table-hover table-bg">
        <thead>
          <tr>
            <td>Movies:</td>
            <td>Known for the role:</td>
          </tr>
        </thead>
				<tbody>
          @for (int i = 0; i < Model.len; i++)
          {
            <tr>
              <td>
                <a class="text-dark" asp-controller="Profile" asp-action="Movie" asp-route-id=@Model.movie_id[i]>
                @Model.title[i]
                </a>
              </td>
					    <td>@Model.character[i]</td>
            </tr> 
          }
				</tbody>
			</table>
    </div>
  </div>
</div>